{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Отправить на устройство",
			"detail": "Отправляет последние файлы на устройство.",
			"type": "shell",
			"command": "./adb/pusher.bat",
			"windows": {
				"command": ".\\adb\\pusher.bat"
			},
			"args": [
				"push",
				"${input:pushType}"
			],
			"group": "build",
			"presentation": {
				"revealProblems": "onProblem",
				"showReuseMessage": false,
				"reveal": "silent",
				"panel": "shared",
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Получить с устройства",
			"detail": "Отправляет последние файлы с устройства.",
			"type": "shell",
			"command": "./adb/pusher.bat",
			"windows": {
				"command": ".\\adb\\pusher.bat"
			},
			"args": [
				"pull",
				"${input:pullType}"
			],
			"presentation": {
				"revealProblems": "onProblem",
				"showReuseMessage": false,
				"reveal": "silent",
				"panel": "shared",
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Остановить Horizon",
			"detail": "Останавливает текущую открытую сессию Horizon.",
			"type": "shell",
			"command": "./adb/pusher.bat",
			"windows": {
				"command": ".\\adb\\pusher.bat"
			},
			"args": [
				"stop-horizon"
			],
			"presentation": {
				"revealProblems": "onProblem",
				"showReuseMessage": false,
				"reveal": "silent",
				"panel": "shared",
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Перезапустить Horizon",
			"detail": "Перезапускает или открывает Horizon и начинает запуск.",
			"type": "shell",
			"command": "./adb/pusher.bat",
			"windows": {
				"command": ".\\adb\\pusher.bat"
			},
			"args": [
				"restart-horizon"
			],
			"presentation": {
				"revealProblems": "onProblem",
				"showReuseMessage": false,
				"reveal": "silent",
				"panel": "shared",
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Сбои устройства",
			"detail": "Отображает все сбои и их причины (продвинутое).",
			"type": "shell",
			"command": "./adb/pusher.bat",
			"windows": {
				"command": ".\\adb\\pusher.bat"
			},
			"args": [
				"log"
			],
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "pushType",
			"description": "Как нужно отправить?",
			"type": "pickString",
			"options": [
				"sources-run",
				"sources",
				"assets-run",
				"assets",
				"all-run",
				"all"
			],
			"default": "sources-run"
		},
		{
			"id": "pullType",
			"description": "Как нужно получить?",
			"type": "pickString",
			"options": [
				"build",
				"source",
				"assets",
				"all"
			],
			"default": "build"
		}
	]
}
