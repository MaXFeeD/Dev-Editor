{
	"info": {
		"name": "Modding Tools",
		"version": "0.4-snapshot2",
		"author": "Nernar",
		"description": "Develop your mods with in-game tools.",
		"clientOnly": true,
		"instantLaunch": true
	},
	"api": "AdaptedScript",
	"target": {
		"source": "script"
	},
	"sources": [
		{
			"type": "custom",
			"language": "javascript",
			"source": "script/adaptedscript"
		},
		{
			"type": "custom",
			"language": "javascript",
			"source": "script/coreengine"
		},
		{
			"source": "library/*",
			"type": "library",
			"language": "javascript"
		},
		{
			"type": "launcher",
			"language": "javascript",
			"source": "script/launcher.js"
		},
		{
			"type": "main",
			"language": "typescript",
			"source": "script/main"
		},
		{
			"type": "custom",
			"language": "javascript",
			"source": "script/runtime"
		},
		{
			"type": "custom",
			"language": "javascript",
			"api": "Instant",
			"source": "script/instant.js"
		}
	],
	"compile": [
		{
			"source": "java/*",
			"type": "java"
		}
	],
	"additional": [
		{
			"source": "assets/*",
			"targetDir": "."
		}
	]
}
